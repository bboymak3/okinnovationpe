<section id="crea-tu-web" style="padding: 2rem; font-family: sans-serif;">
  <h2>Crea tu propia web con IA</h2>
  <p>Elige una plantilla, personaliza tu contenido y genera tu landing dentro de Coporo.</p>

  <div class="plantillas" style="display: flex; gap: 2rem; margin-top: 2rem;">
    <!-- Plantilla 1 -->
    <div class="plantilla" style="border: 1px solid #ccc; padding: 1rem; width: 30%;">
      <h3>Negocio Local</h3>
      <p>Ideal para tiendas, servicios o emprendimientos.</p>
      <button onclick="seleccionarPlantilla('negocio')">Usar esta plantilla</button>
    </div>

    <!-- Plantilla 2 -->
    <div class="plantilla" style="border: 1px solid #ccc; padding: 1rem; width: 30%;">
      <h3>Rifa o Evento</h3>
      <p>Promociona sorteos, rifas o actividades especiales.</p>
      <button onclick="seleccionarPlantilla('rifa')">Usar esta plantilla</button>
    </div>

    <!-- Plantilla 3 -->
    <div class="plantilla" style="border: 1px solid #ccc; padding: 1rem; width: 30%;">
      <h3>Producto o Servicio</h3>
      <p>Vende productos o muestra tus servicios.</p>
      <button onclick="seleccionarPlantilla('producto')">Usar esta plantilla</button>
    </div>
  </div>

  <!-- Formulario de personalización -->
  <form id="formularioLanding" style="margin-top: 3rem;" onsubmit="generarLanding(); return false;">
    <h3>Personaliza tu landing</h3>
    <label>Nombre del proyecto:</label><br>
    <input type="text" name="nombre" required><br><br>

    <label>Descripción:</label><br>
    <textarea name="descripcion" rows="4" required></textarea><br><br>

    <label>Color principal:</label><br>
    <input type="color" name="color"><br><br>

    <label>Imagen o logo (URL):</label><br>
    <input type="url" name="imagen"><br><br>

    <button type="submit">Generar mi landing</button>
  </form>
</section>

<script>
  let plantillaSeleccionada = null;

  function seleccionarPlantilla(tipo) {
    plantillaSeleccionada = tipo;
    alert("Plantilla seleccionada: " + tipo);
  }

  function generarLanding() {
    const form = document.forms['formularioLanding'];
    const datos = {
      plantilla: plantillaSeleccionada,
      nombre: form.nombre.value,
      descripcion: form.descripcion.value,
      color: form.color.value,
      imagen: form.imagen.value
    };
    console.log("Datos para generar landing:", datos);
    alert("Tu landing será generada con IA. ¡Pronto estará lista!");
    // Aquí puedes integrar lógica con IA o backend
  }
</script>